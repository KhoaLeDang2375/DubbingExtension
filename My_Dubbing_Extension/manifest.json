{
  "manifest_version": 3,
  "name": "YouTube TTS Dubber",
  "version": "1.0",
  "description": "Phát TTS song song với video YouTube",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "options.html",
    "default_title": "YouTube TTS Dubber"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
  {
    "resources": ["assets/imgbtn.png"],
    "matches": ["<all_urls>"]
  }
]
}
